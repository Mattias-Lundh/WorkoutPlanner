<h3>Track Tool</h3>
<br />
<div id="map"></div>
<div id="mapControls">
    <button onclick="UndoMarker()">Undo Marker</button>
    <input type="text" id="mapName" value="Map Name" />
    <button onclick="SaveTrack()">Save Track</button>
</div>

<script>
    var markers = [];
    var map;

    function initMap() {
        var directionsDisplay = new google.maps.DirectionsRenderer;
        var directionsService = new google.maps.DirectionsService;

        var uluru = { lat: 57.7089, lng: 11.9746 };
        map = new google.maps.Map(document.getElementById('map'), {
            zoom: 10,
            center: uluru
        });
        directionsDisplay.setMap(map);
        map.addListener('click', function (e) {
            markers.push(new google.maps.Marker({
                position: e.latLng,
                map: map
            }));
            if (markers.length > 1) {
                
                CalculateRoute(directionsDisplay, directionsService);
            }
        });

    }




    function CalculateRoute(directionsDisplay, directionsService) {
        var allWaypoints = [];
        for (var i = 1; i <= markers.length - 2; i++) {
            allWaypoints.push(markers[i].position);
        }
        alert("start:" + markers[0].position + " end: " + markers[markers.length - 1].position + " mid:" + allWaypoints + " markersCount:" + markers.length);
        var request = {
            origin: markers[0].position,
            destination: markers[markers.length - 1].position,
            waypoints: allWaypoints,
            travelMode: 'WALKING'
        };
        directionsService.route(request, function (result, status) {
            if (status = "OK") {
                directionsDisplay.setDirections(result);
            }

        });
    }

    function UndoMarker() {
        markers.pop().setMap();
    }

    function SaveTrack() {

    }
</script>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBxAKqjyu48QPczRxf_XznZ82hLGukWZH0&callback=initMap"
